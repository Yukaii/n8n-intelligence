  "module": "src/index.tsx",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "vite": "^6.3.2",
    "wrangler": "^4.12.0",
    "@cloudflare/vite-plugin": "^0.1.15",
    "@hono/vite-build": "^1.5.0",
    "vite-plugin-ssr-hot-reload": "^0.4.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "hono": "^4.7.7",
    "openai": "^4.95.0"
